@model List<BlogPost>
@{
    ViewData["Title"] = "Manage Blog Posts - Admin";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">📝 Manage Blog Posts</h1>
        <div>
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-dashboard"></i> Dashboard
            </a>
            <a href="@Url.Action("CreateBlog", "Admin")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Post
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Views</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>
                                <strong>@post.Title</strong>
                                @if (!string.IsNullOrEmpty(post.Summary))
                                {
                                    <br>
                        
                                    <small class="text-muted">@(post.Summary.Length > 100 ? post.Summary.Substring(0, 100) + "..." : post.Summary)</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(post.Category))
                                {
                                    <span class="badge bg-primary">@post.Category</span>
                                }
                            </td>
                            <td>
                                @if (post.IsPublished)
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Draft</span>
                                }
                            </td>
                            <td>@post.ViewCount</td>
                            <td>@post.CreatedDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="btn btn-sm btn-outline-info" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("EditBlog", "Admin", new { id = post.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteBlog", "Admin", new { id = post.Id })" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> 
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-file-alt text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No blog posts yet</h3>
            <p class="text-muted">Start sharing your success stories and tips!</p>
            <a href="@Url.Action("CreateBlog", "Admin")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Your First Post
            </a>
        </div>
    }
</div>